<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>My Portfolio</title>
    <link rel="stylesheet" href="/Styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <header>
        <nav class="navbar">
    
            <div class="container-fluid">
                <div class="main-nav">
                    <a class="navbar-brand" href="/"><img src= "/images/mylogo.jpg" alt="its my logo" ></a>

                    <div class="right-menu">
                        <%if(!user){%>
                            <a href='/users/new'>Sign Up</a>
                            <a href='/users/login'>Login</a>
                        <%} else{%>
                            <a class="button button-text" href="/events/new">Start a New Connection</a>
                            <a href='/users/profile'><%= user.firstName%> Profile</a>
                            <a href='/users/logout'>Logout</a>
                        <%}%>
                    </div>
                </div>
            </div>
            
            
        </nav>
    </header>

    <div class="row my-row ms-auto align-items-center">
        <div class="col-md-1 ">
            <a id="board" href="/">Home</a>
        </div>
        
        <div class="col-md-1">
            <a id="board1" href="/events">Events</a>
        </div>
    </div>

    <% if(errorMessages.length > 0) {%>
        <% errorMessages.forEach(message=>{%>
            <div class='error'>
                <%=message%>
            </div>
        <%});%>
    <%}%>
    
    <% if(successMessages.length > 0) {%>

        <% successMessages.forEach(message=>{%>
            <div class='success'>
                <%=message%>
            </div>
            <%});%>
    <%}%>